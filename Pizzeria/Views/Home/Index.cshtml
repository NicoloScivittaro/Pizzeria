@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron text-center">
    <h1 class="display-4">Benvenuto alla Pizzeria!</h1>
    <p class="lead">Scopri il nostro delizioso menu, ordina online e contattaci per qualsiasi richiesta.</p>
    <hr class="my-4">
    <p>Impara a costruire applicazioni Web con ASP.NET Core.</p>
    <a class="btn btn-primary btn-lg" href="https://learn.microsoft.com/aspnet/core" role="button">Scopri di più</a>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Prodotti</h5>
                <p class="card-text">Esplora il nostro variegato menu di pizze, antipasti e dolci.</p>
                <a href="@Url.Action("Index", "Prodotti")" class="btn btn-primary">Scopri i Prodotti</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Ordini</h5>
                <p class="card-text">Visualizza i tuoi ordini e tieni traccia del loro stato.</p>
                <a href="@Url.Action("Index", "Ordini")" class="btn btn-primary">I miei Ordini</a>
            </div>
        </div>
    </div>
</div>
