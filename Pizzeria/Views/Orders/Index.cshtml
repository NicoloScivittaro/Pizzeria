@model IEnumerable<Order>

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

<p>
    <button id="getStatistics">Get Daily Statistics</button>
    <div id="statisticsResult"></div>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCompleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsCompleted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    <form asp-action="MarkAsCompleted" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-primary">Mark as Completed</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        document.getElementById('getStatistics').addEventListener('click', function() {
            fetch('/api/statistics/daily')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('statisticsResult').innerHTML = `Total Orders: ${data.totalOrders}, Total Income: ${data.totalIncome}`;
                });
        });
    </script>
}